@{
    var userId = ViewData["UserId"];
}

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/md5.js"></script>
<script src="~/Scripts/ForgetPassword.js"></script>

<div id="wrapper">
    <div id="introduction">
        Dashboard
    </div>

    <div id="NewPasswordPanel">
        <div style="display: block; width: 550px; padding: 100px 0px; margin: 0 auto;"
            class="ChangePassword" id="divChangePassword">
            <div class="ui-helper-hidden">
                <input id="hiddenUserID" value="@userId"/></div>
            <div style="height: 100%" id="Div2">
                <table id="changePassTable" class="login" style="height: 200px; width: 100%; text-align: left; margin: 0 auto; border-collapse: separate">
                    <tbody>
                        <tr>
                            <td style="width: 100%; height: 30px;" colspan="4">&nbsp;
                            </td>
                        </tr>
                        <tr>
                            <td style="padding-left: 20px;" colspan="4">
                                <span style="color: #B61405; font-weight: bold;" id="Span1">Change your password</span><br>
                                <span style="color: #3A3A38; font-size: 93%; font-weight: bold;" id="Span2">Please enter
                                                                                                                           your New Password below </span>
                            </td>
                        </tr>
                        <tr>
                            <td style="height: 10px;" colspan="3"></td>
                        </tr>
                        <tr>
                            <td style="text-align: right; color: #4c68a9; font-weight: bold; padding-left: 20px;">New password&nbsp;&nbsp;:&nbsp;&nbsp;
                            </td>
                            <td>
                                <input type="password" style="border: 1px solid #c0c0c0; width: 150px; height: 18px;" class="txtNewPassword" id="txtNewPassword" name="txtNewPassword">
                                <input type="hidden" style="border: 1px solid #c0c0c0; width: 150px; height: 18px;" class="txtNewPassword" id="txtNewPasswordHid" name="txtNewPasswordHid">
                                <input type="hidden" style="border: 1px solid #c0c0c0; width: 150px; height: 18px;" class="txtNewPassword" id="txtNewPasswordFlagHid" name="txtNewPasswordFlagHid">
                            </td>
                            <td>&nbsp;
                            </td>
                        </tr>
                        <tr>
                            <td style="text-align: right; color: #4c68a9; font-weight: bold; padding-left: 20px;">Confirm new password&nbsp;&nbsp;:&nbsp;&nbsp;
                            </td>
                            <td>
                                <input type="password" style="border: 1px solid #c0c0c0; width: 150px; height: 18px;" class="txtConfirmPassword" id="txtConfirmPassword" name="txtConfirmPassword">
                                <input type="hidden" style="border: 1px solid #c0c0c0; width: 150px; height: 18px;" class="txtConfirmPassword" id="txtConfirmPasswordHid" name="txtConfirmPasswordHid">
                            </td>
                            <td>
                                <input type="button" value="Change" style="color: #057398; font-weight: bold; font-family: Arial, Helvetica, sans-serif; font-size: 11px; background-color: #FFFFFF; border: 1px solid #c0c0c0; height: 25px; width: 70px; background-image: url(../Content/Images/NavBgSelect.jpg); background-position: left top; background-repeat: no-repeat;"
                                    id="cmdChangePassword" name="cmdChangePassword" onclick="ForgetPassword.ForgetPasswordSubmit();">
                            </td>
                        </tr>
                        <tr>
                            <td style="color: #B92C13; padding-left: 20px; height: 58px" colspan="3">
                                <div id="divErrorMessage">
                                    &nbsp;
                               
                                </div>
                            </td>
                            <td></td>
                        </tr>
                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div style="clear: both">
    </div>
    <div class="footer" id="footer">
        <p>
            &copy; 2014 IMS Health. All rights reserved. Developed &amp; Designed by IMS Health CI &amp;
                MR Services
           
        </p>
        <img alt="logo" src="../Content/Images/logo-small-ims.gif">
        <div style="clear: both">
        </div>
    </div>


</div>

<style type="text/css">
    #introduction {
        background: url("../Content/images/header_bg.png") no-repeat scroll 0 0 rgba(0, 0, 0, 0);
        height: 78px;
        margin: 0;
        text-indent: -9999px;
    }
</style>
