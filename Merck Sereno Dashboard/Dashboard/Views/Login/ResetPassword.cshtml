@model Dashboard.ViewModels.LoginViewModel

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Reset Password";
}

<div id="outer-wrapper" class="ui-helper-clearfix" style="height: 100%;">
    <div class="container">
        <div id="inner-wrapper" class="ui-helper-clearfix">
            <!--banner start-->
            <div id="banner-container" class="top-company-banner" style="width: 1000px;">
                <div id="header" style="padding-left: 0px; padding-right: 0px; margin-left: 0px; margin-right: 0px;">
                    <div id="top-header">
                        <div id="top-company-banner-mundi" class="top-company-banner-Mundi">
                        </div>
                        <div id="top-company-banner">
                            <div id="dashboardTitle" class="dashboardTitle">
                                Pain Performance Dashboard
                            </div>
                            <div id="Contact">
                                <div>
                                    <br />
                                <br />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="emptyNav">
                    </div>
                </div>
            </div>
            <!--banner end-->

            <!-- content -->

            <div style="height: 500px;">
                <form method="post" style="padding-top: 180px; height: 80%;">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.RedirectUrl, new { @id="redirecturl", @class = "form-control" })
                    <div id="login-box">
                        <table class="login" style="font-family: Arial, Helvetica, sans-serif; font-size: 100%;">
                            <tr>
                                <td colspan="4" style="width: 100%; height: 40px;">&nbsp;
                                </td>
                            </tr>
                            <tr>
                                <td colspan="4" style="padding-left: 20px; padding-bottom: 10px;">

                                    <div style="height: 5px;"></div>
                                    <span style="color: #990000; font-weight: bold; font-size: 14px;">Reset Password</span>
                                    <br />
                                    <span id="login_identify_text" style="font-weight: bold;">Please enter your new password below </span>
                                </td>
                            </tr>
                            <tr>
                                <td width="25%" style="text-align: left; font-weight: bold; padding-left: 20px;">Username
                                </td>
                                <td width="5%" style="color: #4c68a9">:
                                </td>
                                <td width="50%" style="padding-top: 10px">
                                    @Html.TextBoxFor(m => m.UserName, new { @id="userName", @class = "form-control" })
                                </td>
                                <td width="20%">&nbsp;
                                </td>
                            </tr>
                            <tr>
                                <td style="text-align: left; font-weight: bold; padding-left: 20px;">New Password
                                </td>
                                <td width="5%" style="color: #4c68a9">:
                                </td>
                                <td class="login_text_box">
                                    @Html.PasswordFor(m => m.NewPassword, new { @id="plainPassword", @class = "form-control" })
                                </td>
                            </tr>
                                                        <tr>
                                <td style="text-align: left; font-weight: bold; padding-left: 20px;">Retype Password
                                </td>
                                <td width="5%" style="color: #4c68a9">:
                                </td>
                                <td class="login_text_box">
                                    @Html.PasswordFor(m => m.ReTypedPassword, new { @id="plainPassword", @class = "form-control" })
                                </td>
                                <td style="padding-top: 3px; padding-left: 10px;">
                                    <input class="login_submit_button" type="submit" value="Login" />
                                </td>
                            </tr>
                            <tr>
                                <td colspan="3">
                                    <div runat="server" id="divErrorMessage">
                                        <span>@Html.ValidationSummary(true)
                                            @TempData["ValidationMessage"]</span>
                                    </div>
                                </td>
                                <td></td>
                            </tr>
                        </table>
                    </div>
                </form>
            </div>
            <!-- content end -->
        </div>
    </div>
</div>